<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:id="@+id/home">

	<LinearLayout android:id="@+id/home_titlebar" style="@style/TitleBar">
		<ImageView style="@style/TitleBarLogo"
			android:contentDescription="@string/app_name" android:src="@drawable/title_logo" />

		<View style="@style/TitleBarSpring" />

		<ImageView style="@style/TitleBarSeparator" />

		<ImageButton android:id="@+id/home_titlebar_btn_search"
		style="@style/TitleBarAction"
		android:src="@drawable/parada_android_32" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:padding="6dip">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<Button 
				android:layout_weight="1" android:id="@+id/home_btn_nearby" style="@style/HomeButton"
				android:text="@string/btn_search_map"
				android:drawableTop="@drawable/mapa_android"
				android:layout_gravity="center_vertical">
				</Button>
			<Button 
				android:id="@+id/home_btn_search" style="@style/HomeButton"
				android:text="@string/btn_search_stops"
				android:drawableTop="@drawable/parada_android"
				android:layout_gravity="center_vertical">
				</Button>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
			<Button 
				android:layout_weight="1" android:id="@+id/home_btn_about" style="@style/HomeButton"
				android:text="@string/about"
				android:drawableTop="@android:drawable/ic_menu_info_details"
				android:layout_gravity="center_vertical">
				</Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:drawable/zoom_plate"
    android:gravity="top"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="40dip">
    <LinearLayout
    	android:orientation="horizontal" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent">
        <TextView android:text="EditText" 
        	android:id="@+id/title" style="@style/TitlePopupText"
        	android:layout_height="wrap_content"
        	android:background="@null">
        </TextView>
        <Button  
	        android:id="@+id/btn_close" 
	        android:background="@android:drawable/ic_menu_close_clear_cancel" 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content">
	    </Button>
    </LinearLayout>
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_height="90dip" 
    	android:layout_width="fill_parent">

	        	<TextView android:id="@+id/description" style="@style/BodyPopupText"
		        	android:gravity="top"
		        	android:layout_height="fill_parent"
		        	android:layout_gravity="top" 
		        	android:text="EditText" 
		        	android:background="@color/background2"
		        	android:singleLine="false"
		        	android:inputType="text|textMultiLine"
		        	android:scrollbars="vertical">
		        </TextView>

		        <Button  
			        android:id="@+id/btn_launch" style="@style/PopupButton"
			        android:drawableTop="@drawable/parada_48"
			        android:text="Recorridos">
			    </Button>
	    </LinearLayout>
  </LinearLayout>

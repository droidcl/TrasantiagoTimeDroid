<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:drawable/zoom_plate"
    android:gravity="top"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingBottom="30dip">
    <LinearLayout
    	android:gravity="top"
    	android:orientation="horizontal" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent">
        <EditText android:text="EditText" 
        	android:id="@+id/title" style="@style/TitleBarText"
        	android:layout_height="wrap_content"
        	android:editable="false" 
        	android:background="@null">
        </EditText>
        <Button  
	        android:id="@+id/btn_close" 
	        android:background="@android:drawable/ic_menu_close_clear_cancel" 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content">
	    </Button>
    </LinearLayout>
    <LinearLayout
    	android:gravity="top"
    	android:layout_gravity="top"
    	android:orientation="horizontal" 
    	android:layout_height="70dip" 
    	android:layout_width="fill_parent">
        <EditText android:text="EditText" 
        	android:id="@+id/description" style="@style/TitleBarText"
        	android:layout_height="fill_parent"
        	android:editable="false" 
        	android:background="@null">
        </EditText>
        <Button  
	        android:id="@+id/btn_launch" 
	        android:background="@drawable/parada_48" 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content">
	    </Button>
    </LinearLayout>
  </LinearLayout>
